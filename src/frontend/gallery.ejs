<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Gallery</title>
  </head>

  <body>
    <header>
      <nav>
        <h2>Shittier.dl</h2>
        <a href="/gallery" class="active">Gallery</a>
        <a href="/upload">Upload</a>
        <a href="/settings">Settings</a>
        <div class="spacer"></div>
        <a href="/logout" class="logout">Logout</a>
      </nav>

      <h1>Gallery (<%=files.length%>)</h1>
    </header>

    <main>
      <%files.forEach((v)=> {%>
        <article>
          <div>
            <button class="transparent"><span class="material-symbols-outlined"> delete_forever </span></button>
            <p>logs.png</p>
            <button class="transparent"><span class="material-symbols-outlined"> content_copy </span></button>
          </div>
          <img src="<%=v.src%>" alt="file named <%=v.name%>" />
        </article>
      <%})%>
    </main>
  </body>

  <script>
    document.querySelectorAll('#copy').forEach((v) => {
      v.addEventListener('click', (e) => {
        const url = e.originalTarget.parentElement.children[1].href;
        navigator.clipboard.writeText(url);
        alert('Copied.');
      });
    });

    document.querySelectorAll('#delete').forEach((v) => {
      v.addEventListener('click', (e) => {
        const url = e.originalTarget.parentElement.children[1].href;

        alert('Your mom.');
      });
    });
  </script>

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined');

    :root {
      --background: #11191f;
      --content: #18232c;
      --primary: #0067c5;
      --secoundary: #00459c;
      --text: #edf0f3;
      --border: #676f7b;
    }

    html,
    body {
      width: 100%;
      height: 100%;
      margin: 0;
      color: var(--text);
      background-color: var(--background);
      font-family: 'Inter', sans-serif;
    }

    nav {
      display: flex;
      min-height: 3rem;
      background-color: var(--content);
    }

    h2 {
      display: flex;
      align-items: center;
      margin: 0;
      padding: 0 1.25rem 0 1.5rem;
      border-right: 1px solid var(--border);
    }

    .spacer {
      width: 100%;
    }

    nav > a {
      display: flex;
      align-items: center;
      margin: 0;
      padding: 0 1.25rem;
      color: var(--text);
      transition: all 0.175s;
    }

    nav > a.active {
      background-color: var(--secoundary);
    }

    nav > a:hover {
      background-color: var(--primary);
    }

    .logout {
      border-left: 1px solid var(--border);
    }

    main {
      padding: 0 2vw;
      display: flex;
      flex-wrap: wrap;
    }

    h1 {
      text-align: center;
      margin: 5vh 0;
    }

    article {
      width: calc((100% - 4vw) / 12);
      text-align: center;
      background-color: var(--content);
      border-radius: 4px;
      margin: 1vh 0.5vw;
      overflow: hidden;
    }

    article > div {
      padding: 0;
      margin: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: small;
    }

    button {
      background-color: var(--primary);
      border: none;
      border-radius: 4px;
      color: var(--text);
      transition: background-color 0.175s;
    }

    button.transparent {
      background-color: transparent;
      aspect-ratio: 1;
      margin: 0.5vh 0.2vw;
    }

    button:hover {
      background-color: var(--secoundary);
    }

    img {
      width: 100%;
      object-fit: contain;
    }
  </style>
</html>
